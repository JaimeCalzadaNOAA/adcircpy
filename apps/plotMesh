#! /usr/bin/env python
import os
import argparse
import matplotlib.pyplot as plt
from AdcircPy.Mesh import AdcircMesh

cwd = os.getcwd()

def parse_args():
    global args
    parser = argparse.ArgumentParser(description="Program to see a quick plot of an ADCIRC mesh.")
    parser.add_argument("meshPath", nargs="?", default = cwd + "/fort.14", help="ADCIRC mesh file path. Defaults to ./fort.14")    
    args =  parser.parse_args()
    
def main():
    parse_args()
    mesh = AdcircMesh.from_fort14(args.meshPath)
    mesh.make_plot()
    plt.show()

if __name__ == "__main__":
    main()